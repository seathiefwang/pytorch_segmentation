{
    "name": "ResNeStUnet",
    "n_gpu": 1,
    "use_synch_bn": false,

    "arch": {
        "type": "ResNeStUnet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "RSI",
        "args":{
            "data_dir": "/content/segmentation_data",
            "batch_size": 10,
            "base_size": 256,
            "crop_size": 256,
            "batch_stride": 2,
            "shuffle": true,
            "split": "train",
            "num_workers": 4
        }
    },

    "val_loader": {
        "type": "RSI",
        "args":{
            "data_dir": "/content/segmentation_data",
            "batch_size": 8,
            "crop_size": 256,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": false,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "multiple_loss": false,
    "loss": "CE_DiceLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "CosineWithRestarts",
        "args": {
            "t_max": 10,
            "eta_min": 1e-5,
            "factor": 1
        }
    },

    "trainer": {
        "epochs": 40,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 5
    }
}
