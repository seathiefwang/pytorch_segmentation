{
    "name": "ResUnet",
    "n_gpu": 2,
    "use_synch_bn": true,

    "arch": {
        "type": "ResUnet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "RSI",
        "args":{
            "data_dir": "/home/mumu/src/rsi",
            "batch_size": 30,
            "base_size": 256,
            "crop_size": 256,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train_all",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "RSI",
        "args":{
            "data_dir": "/home/mumu/src/rsi",
            "batch_size": 8,
            "crop_size": 256,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": false,
        "args":{
            "lr": 0.001,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CE_LovaszLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "CosineWithRestarts",
        "args": {
            "t_max": 10,
            "eta_min": 1e-6,
            "factor": 1
        }
    },

    "trainer": {
        "epochs": 120,
        "save_dir": "saved/",
        "save_period": 5,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 200,

        "val": true,
        "val_per_epochs": 5
    }
}
