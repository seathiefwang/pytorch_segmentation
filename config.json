{
    "name": "ResUnet",
    "n_gpu": 2,
    "use_synch_bn": true,

    "arch": {
        "type": "ResUnet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "RIS",
        "args":{
            "data_dir": "/mnt/data/DeepLearning/bisai/datafountain",
            "batch_size": 16,
            "base_size": 256,
            "crop_size": 256,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 8
        }
    },

    "val_loader": {
        "type": "RIS",
        "args":{
            "data_dir": "/mnt/data/DeepLearning/bisai/datafountain",
            "batch_size": 8,
            "crop_size": 256,
            "val": true,
            "split": "val",
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "Adam",
        "differential_lr": false,
        "args":{
            "lr": 0.001
        }
    },

    "loss": "FocalLoss",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "CosineWithRestarts",
        "args": {
            "t_max": 10
        }
    },

    "trainer": {
        "epochs": 80,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 100,

        "val": true,
        "val_per_epochs": 5
    }
}
